{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["node_modules/@types", "node_modules/@solana/spl-token/lib/types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
  },
    "include": ["src/**/*", "scripts/**/*"],
}
